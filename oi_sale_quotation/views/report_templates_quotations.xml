          <table style="border-style: solid;border-width:1px;border-top:hidden" width="100%">
                <tr style="width:100%">
                    <td style="border-style: solid;border-width:1px;font-size:12px;" width="100%"><STRONG>Terms and conditions</STRONG></td>
                    
                </tr>
                <tr>
                     <td style="border-style: solid;border-width:1px;font-size:12px;" width="100%"><span t-field="doc.note"/></td>

                </tr>
          </table>
      </div>
        </t> 
     </template>
     
    <template id="quotation_report_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="oi_sale_quotation.report_quotation_report_template" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
